---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import BaseLayout from "./BaseLayout.astro";

type Props = Omit<CollectionEntry<"blog">["data"], "pubDate"> & {
	pubDate?: Date;
	ogImage?: string;
	favicon?: string;
	noindex?: boolean;
};

const {
	title,
	description,
	pubDate,
	updatedDate,
	heroImage,
	ogImage,
	favicon,
	noindex,
} = Astro.props;
---

<BaseLayout title={title} description={description} mainClass="max-w-5xl">
	<style>
		.hero-image {
			width: 100%;
		}
		.hero-image img {
			display: block;
			margin: 0 auto;
			border-radius: 12px;
			box-shadow: var(--box-shadow);
			max-width: 50%;
			aspect-ratio: 16/9;
			object-fit: cover;
			object-position: top center;
		}
		.prose {
			width: 80%;
			max-width: 100%;
			margin: auto;
			padding: 1em;
			color: rgb(var(--gray-dark));
		}

		/* Text and content centering - keep readable width */
		.prose :global(> :not(pre)) {
			max-width: 720px;
			margin-left: auto;
			margin-right: auto;
		}

		/* Allow code blocks to expand */
		.prose :global(pre) {
			max-width: 100%;
			border-radius: 8px;
			/* Optional: ensure it doesn't touch edges on mobile */
		}

		.title {
			margin-bottom: 1em;
			padding: 1em 0;
			text-align: center;
			line-height: 1;
			/* Ensure title is also constrained */
			max-width: 720px;
			margin-left: auto;
			margin-right: auto;
		}
		.title h1 {
			margin: 0 0 0.5em 0;
		}
		.date {
			margin-bottom: 0.5em;
			color: rgb(var(--gray));
		}
		.last-updated-on {
			font-style: italic;
		}
	</style>

	<article>
		<div class="hero-image">
			{
				heroImage && (
					<Image width={1020} height={510} src={heroImage} alt="" />
				)
			}
		</div>
		<div class="prose">
			<div class="title">
				<div class="date">
					{pubDate && <FormattedDate date={pubDate} />}
					{
						updatedDate && (
							<div class="last-updated-on">
								Last updated on{" "}
								<FormattedDate date={updatedDate} />
							</div>
						)
					}
				</div>
				<h1>{title}</h1>
				<hr />
			</div>
			<slot />
		</div>
	</article>
</BaseLayout>
