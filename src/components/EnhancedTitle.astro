---
export interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<span class={`enhanced-title ${className}`}>
  <strong>
    <span class="letter">N</span>
    <span class="letter">e</span>
    <span class="letter">x</span>
    <span class="letter">t</span>
    <span class="letter letter-v accent">V</span>
    <span class="letter">a</span>
    <span class="letter">l</span>
    <span class="letter">D</span>
    <span class="letter">a</span>
    <span class="letter">t</span>
    <span class="letter">a</span>
  </strong>
</span>

<style>
  .enhanced-title {
    display: inline-block;
    font-size: 2rem;
    line-height: 1;
    font-weight: 700;
  }

  .letter {
    display: inline-block;
    transition: all 0.3s ease;
    color: rgb(var(--black));
  }

  .letter-v {
    color: var(--accent);
  }

  /* Hover effects */
  .enhanced-title:hover .letter {
    transform: translateY(-1px);
  }

  .enhanced-title:hover .letter-v {
    color: var(--accent-dark);
    text-shadow: 0 2px 8px rgba(255, 107, 53, 0.3);
    transform: translateY(-2px) scale(1.05);
  }

  /* Staggered animation delays */
  .letter:nth-child(1) { transition-delay: 0ms; }
  .letter:nth-child(2) { transition-delay: 20ms; }
  .letter:nth-child(3) { transition-delay: 40ms; }
  .letter:nth-child(4) { transition-delay: 60ms; }
  .letter:nth-child(5) { transition-delay: 80ms; }
  .letter:nth-child(6) { transition-delay: 100ms; }
  .letter:nth-child(7) { transition-delay: 120ms; }
  .letter:nth-child(8) { transition-delay: 140ms; }
  .letter:nth-child(9) { transition-delay: 160ms; }
  .letter:nth-child(10) { transition-delay: 180ms; }
  .letter:nth-child(11) { transition-delay: 200ms; }
</style>