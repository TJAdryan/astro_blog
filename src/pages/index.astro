---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

// 1. Fetch all blog posts
const posts = await getCollection("blog");

// 2. Sort posts by date in descending order
posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// 3. Get the 3 most recent posts
const latestPosts = posts.slice(0, 3);
---

<BaseLayout>
  <div class="container">
    <h1 class="text-4xl font-bold mb-4">NextValData</h1>
    <p class="mb-8 text-lg text-gray-600 dark:text-gray-400">
      Data insights, analytics, and technical explorations.
    </p>

    <!-- Latest Posts Section -->
    {
      latestPosts.length > 0 && (
        <div class="latest-posts mb-12">
          <h2 class="text-2xl font-bold mb-4">Latest Posts</h2>
          <div class="space-y-4">
            {latestPosts.map((post) => (
              <div class="border-b pb-4 last:border-b-0">
                <a
                  href={`/blog/${post.slug}/`}
                  class="text-xl font-bold text-blue-600 dark:text-blue-400 hover:underline"
                >
                  {post.data.title}
                </a>
                <p class="mt-2 text-gray-700 dark:text-gray-300">
                  {post.data.description}
                </p>
                <p class="text-sm text-gray-500 mt-1">
                  {new Date(post.data.pubDate).toLocaleDateString()}
                </p>
              </div>
            ))}
          </div>
        </div>
      )
    }

    <!-- Interesting Articles Widget -->
    <div
      id="daily-widget"
      class="p-6 border rounded-lg bg-gray-50 dark:bg-gray-800"
    >
      <a href="/interesting-articles/" class="hover:underline">
        <h3 class="font-bold text-lg mb-2">Articles I Find Interesting</h3>
      </a>
      <a
        id="article-title"
        href="#"
        target="_blank"
        rel="noopener noreferrer"
        class="text-blue-600 dark:text-blue-400 hover:underline italic"
      >
        Loading...
      </a>
      <p id="article-author" class="text-sm text-gray-600 dark:text-gray-400 mt-1"></p>
    </div>
  </div>
</BaseLayout>

<script>
  // Seminal papers database for "Paper of the Day"
  const seminalPapers = [
    {
      title: "Dissecting racial bias in an algorithm used to manage the health of populations",
      authors: "Obermeyer, Z., Powers, B., Vogeli, C., & Mullainathan, S.",
      year: "2019",
      journal: "Science",
      url: "https://science.sciencemag.org/content/366/6464/447"
    },
    {
      title: "SMART on FHIR: A standards-based, interoperable apps platform for electronic health records",
      authors: "Mandel, J. C., Kreda, D. A., Mandl, K. D., Kohane, I. S., & Ramoni, R. B.",
      year: "2016",
      journal: "Journal of the American Medical Informatics Association",
      url: "https://academic.oup.com/jamia/article/23/5/899/2399304"
    },
    {
      title: "HL7 Clinical Document Architecture, Release 2",
      authors: "Dolin, R. H., Alschuler, L., Boyer, S., et al.",
      year: "2006",
      journal: "Journal of the American Medical Informatics Association",
      url: "https://academic.oup.com/jamia/article/13/1/30/719422"
    },
    {
      title: "The value of health care information exchange and interoperability",
      authors: "Walker, J., Pan, E., Johnston, D., et al.",
      year: "2005",
      journal: "Health Affairs",
      url: "https://www.healthaffairs.org/doi/10.1377/hlthaff.w5.10"
    },
    {
      title: "Role of computerized physician order entry systems in facilitating medication errors",
      authors: "Koppel, R., Metlay, J. P., Cohen, A., et al.",
      year: "2005",
      journal: "JAMA",
      url: "https://jamanetwork.com/journals/jama/fullarticle/200501"
    },
    {
      title: "Bystander intervention in emergencies: Diffusion of responsibility",
      authors: "Darley, J. M., & Latan√©, B.",
      year: "1968",
      journal: "Journal of Personality and Social Psychology",
      url: "https://psycnet.apa.org/record/1968-07393-001"
    },
    {
      title: "Healthcare Data Interoperability: Challenges and Opportunities in Digital Health Integration",
      authors: "Peterson, L.",
      year: "2024",
      journal: "Universiteit Leiden Student Theses",
      url: "https://studenttheses.universiteitleiden.nl/access/item%3A2661526/view"
    }
  ];

  // Function to get today's paper based on date
  function getTodaysPaper() {
    const today = new Date();
    const dayOfYear = Math.floor((today - new Date(today.getFullYear(), 0, 0)) / (1000 * 60 * 60 * 24));
    const paperIndex = dayOfYear % seminalPapers.length;
    return seminalPapers[paperIndex];
  }

  // Load today's paper
  document.addEventListener('DOMContentLoaded', function() {
    const paper = getTodaysPaper();
    const titleElement = document.getElementById('article-title');
    const authorElement = document.getElementById('article-author');
    
    if (titleElement && authorElement) {
      titleElement.textContent = paper.title;
      titleElement.href = paper.url;
      authorElement.textContent = `${paper.authors} (${paper.year}) - ${paper.journal}`;
    }
  });
</script>