---
import BaseLayout from '../layouts/BaseLayout.astro';
import { featuredArticles } from '../data/articles.js';
---

<BaseLayout>
  <div class="container">
    <h1 class="text-4xl font-bold mb-4">Interesting Articles</h1>
    <p class="mb-8 text-lg text-gray-600 dark:text-gray-400">
      Research papers and articles I've referenced or found particularly insightful.
    </p>

    <div class="space-y-6">
      {featuredArticles.map((article) => (
        <div class="border-b pb-4 last:border-b-0 bg-white dark:bg-slate-900 rounded-lg shadow p-6">
          <a href={article.url} target="_blank" rel="noopener noreferrer" class="text-xl font-bold text-blue-600 dark:text-blue-400 hover:underline block mb-1">
            {article.title}
          </a>
          <p class="text-sm text-gray-500 mb-1">
            {article.authors} ({article.year}) - {article.journal}
          </p>
          <p class="text-gray-700 dark:text-gray-300">
            {article.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</BaseLayout>
