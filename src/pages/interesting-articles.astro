---
import BaseLayout from '../layouts/BaseLayout.astro';
import { featuredArticles } from '../data/articles.js';
---

<BaseLayout>
  <div class="container">
    <h1 class="text-4xl font-bold mb-4">Interesting Articles</h1>
    <p class="mb-8 text-lg text-gray-600 dark:text-gray-400">
      Research papers and articles I've referenced or found particularly insightful.
    </p>

    <div class="space-y-8">
      {featuredArticles.map((article) => (
        <div class="p-6 border rounded-lg bg-gray-50 dark:bg-gray-800">
          <h3 class="text-base font-medium mb-2 whitespace-nowrap overflow-hidden text-ellipsis">
            <a href={article.url} target="_blank" rel="noopener noreferrer" class="text-blue-600 dark:text-blue-400 hover:underline">
              {article.title}
            </a>
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-3">
            {article.authors} ({article.year}) - {article.journal}
          </p>
          <p class="text-gray-700 dark:text-gray-300">
            {article.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</BaseLayout>
