---
import BaseLayout from "../layouts/BaseLayout.astro";
import { ALLOWED_EMAILS } from "../allowed_emails";

const user = await Astro.locals.currentUser();
if (!user) return Astro.redirect("/login");

const userEmail = user?.emailAddresses?.[0]?.emailAddress;

// VIP: Redirect Sophio to wedding page immediately (Implicit Allow)
if (userEmail && userEmail.toLowerCase() === "sophiogabatashvili@gmail.com") {
  return Astro.redirect("/wedding");
}

if (ALLOWED_EMAILS.length > 0) {
  if (!userEmail || !ALLOWED_EMAILS.includes(userEmail)) {
    return Astro.redirect("/unauthorized");
  }
}

import {
  SignedIn,
  SignedOut,
  UserButton,
  SignOutButton,
} from "@clerk/astro/react";
import fs from "node:fs";
import path from "node:path";

let articleCount = 0;
let trackerCount = 0;

try {
  // 1. Article Count
  const articlePath = path.resolve("./src/data/completed_log.json");
  if (fs.existsSync(articlePath)) {
    const data = fs.readFileSync(articlePath, "utf-8");
    const log = JSON.parse(data);
    articleCount = log.length;
  }

  // 2. Tracker Count
  const trackerPath = path.resolve("./src/data/tracker_log.json");
  if (fs.existsSync(trackerPath)) {
    const data = fs.readFileSync(trackerPath, "utf-8");
    const log = JSON.parse(data);
    trackerCount = log.length;
  }
} catch (e) {
  console.error("Error reading stats:", e);
}
---

<BaseLayout>
  <div
    class="min-h-[80vh] flex flex-col items-center justify-center p-4 bg-gradient-to-b from-white to-blue-50/30"
  >
    <SignedIn client:load>
      <div
        class="w-full max-w-5xl animate-in fade-in slide-in-from-bottom-8 duration-700"
      >
        {/* Hero Header */}
        <div class="text-center mb-16 relative">
          <div
            class="absolute -top-20 left-1/2 -translate-x-1/2 w-96 h-96 bg-blue-400/20 rounded-full blur-3xl -z-10"
          >
          </div>
          <h1
            class="text-5xl md:text-7xl font-black text-transparent bg-clip-text bg-gradient-to-r from-blue-600 via-purple-600 to-blue-600 mb-6 drop-shadow-sm tracking-tight"
          >
            Data Center
          </h1>
          <p
            class="text-xl text-gray-600 max-w-2xl mx-auto font-light leading-relaxed"
          >
            Welcome back. Access your learning tools and tracking metrics.
          </p>
          <div class="mt-8 flex justify-center gap-4">
            <div
              class="inline-flex items-center gap-2 px-6 py-2 bg-white rounded-full shadow-sm border border-gray-100 hover:shadow-md transition-shadow"
            >
              <UserButton />
              <span class="text-sm font-medium text-gray-500"
                >Authenticated Session</span
              >
            </div>

            <button
              id="sign-out-trigger"
              class="px-6 py-2 bg-white text-red-500 rounded-full shadow-sm border border-red-100 hover:bg-red-50 hover:shadow-md transition-all text-sm font-semibold cursor-pointer"
            >
              Sign Out
            </button>
          </div>

          <script is:inline>
            document
              .getElementById("sign-out-trigger")
              ?.addEventListener("click", async () => {
                if (window.Clerk) {
                  await window.Clerk.signOut();
                  window.location.href = "/login";
                }
              });
          </script>
        </div>

        {/* Action Grid */}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 px-4">
          {/* Reading Challenge Card */}
          <a
            href="/private"
            class="group relative overflow-hidden rounded-3xl bg-white p-1 border border-gray-100 shadow-2xl shadow-blue-900/5 hover:shadow-blue-900/10 hover:-translate-y-2 transition-all duration-500"
          >
            <div
              class="absolute inset-0 bg-gradient-to-br from-blue-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"
            >
            </div>
            <div
              class="relative h-full bg-white rounded-[20px] p-8 overflow-hidden z-10 flex flex-col"
            >
              <div
                class="absolute -right-12 -top-12 w-48 h-48 bg-blue-50 rounded-full blur-2xl group-hover:bg-blue-100 transition-colors"
              >
              </div>

              <div
                class="w-14 h-14 bg-blue-600 text-white rounded-2xl flex items-center justify-center mb-6 shadow-lg shadow-blue-600/20 group-hover:scale-110 transition-transform duration-500"
              >
                <svg
                  class="w-7 h-7"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                  ></path></svg
                >
              </div>

              <h3 class="text-3xl font-bold text-gray-900 mb-2">
                Reading Challenge
              </h3>
              <p class="text-gray-500 mb-8 flex-grow">
                Weekly curated deep-dives into Data Engineering & Life Sciences.
              </p>

              <div class="flex items-end justify-between mt-auto">
                <div>
                  <span
                    class="block text-4xl font-black text-blue-600 tracking-tighter"
                    >{articleCount}</span
                  >
                  <span
                    class="text-xs font-bold text-gray-400 uppercase tracking-widest"
                    >Completed</span
                  >
                </div>
                <div
                  class="w-10 h-10 rounded-full border border-gray-100 flex items-center justify-center group-hover:bg-blue-600 group-hover:text-white group-hover:border-transparent transition-all duration-300"
                >
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg
                  >
                </div>
              </div>
            </div>
          </a>

          {/* Tracker Card */}
          <a
            href="/tracker"
            class="group relative overflow-hidden rounded-3xl bg-white p-1 border border-gray-100 shadow-2xl shadow-teal-900/5 hover:shadow-teal-900/10 hover:-translate-y-2 transition-all duration-500"
          >
            <div
              class="absolute inset-0 bg-gradient-to-br from-teal-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"
            >
            </div>
            <div
              class="relative h-full bg-white rounded-[20px] p-8 overflow-hidden z-10 flex flex-col"
            >
              <div
                class="absolute -right-12 -top-12 w-48 h-48 bg-teal-50 rounded-full blur-2xl group-hover:bg-teal-100 transition-colors"
              >
              </div>

              <div
                class="w-14 h-14 bg-teal-600 text-white rounded-2xl flex items-center justify-center mb-6 shadow-lg shadow-teal-600/20 group-hover:scale-110 transition-transform duration-500"
              >
                <svg
                  class="w-7 h-7"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                  ></path></svg
                >
              </div>

              <h3 class="text-3xl font-bold text-gray-900 mb-2">
                Output Tracker
              </h3>
              <p class="text-gray-500 mb-8 flex-grow">
                Log deep work, compliance metrics, and strategy progress.
              </p>

              <div class="flex items-end justify-between mt-auto">
                <div>
                  <span
                    class="block text-4xl font-black text-teal-600 tracking-tighter"
                    >{trackerCount}</span
                  >
                  <span
                    class="text-xs font-bold text-gray-400 uppercase tracking-widest"
                    >Logged Days</span
                  >
                </div>
                <div
                  class="w-10 h-10 rounded-full border border-gray-100 flex items-center justify-center group-hover:bg-teal-600 group-hover:text-white group-hover:border-transparent transition-all duration-300"
                >
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg
                  >
                </div>
              </div>
            </div>
          </a>

          {/* Wedding Card */}
          <a
            href="/wedding"
            class="group relative overflow-hidden rounded-3xl bg-white p-1 border border-gray-100 shadow-2xl shadow-pink-900/5 hover:shadow-pink-900/10 hover:-translate-y-2 transition-all duration-500"
          >
            <div
              class="absolute inset-0 bg-gradient-to-br from-pink-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"
            >
            </div>
            <div
              class="relative h-full bg-white rounded-[20px] p-8 overflow-hidden z-10 flex flex-col"
            >
              <div
                class="absolute -right-12 -top-12 w-48 h-48 bg-pink-50 rounded-full blur-2xl group-hover:bg-pink-100 transition-colors"
              >
              </div>

              <div
                class="w-14 h-14 bg-pink-600 text-white rounded-2xl flex items-center justify-center mb-6 shadow-lg shadow-pink-600/20 group-hover:scale-110 transition-transform duration-500"
              >
                <svg
                  class="w-7 h-7"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                  ></path></svg
                >
              </div>

              <h3 class="text-3xl font-bold text-gray-900 mb-2">Our Wedding</h3>
              <p class="text-gray-500 mb-8 flex-grow">
                A look back at our special day in September.
              </p>

              <div class="flex items-end justify-between mt-auto">
                <div>
                  <span
                    class="text-xs font-bold text-gray-400 uppercase tracking-widest"
                    >Memories</span
                  >
                </div>
                <div
                  class="w-10 h-10 rounded-full border border-gray-100 flex items-center justify-center group-hover:bg-pink-600 group-hover:text-white group-hover:border-transparent transition-all duration-300"
                >
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg
                  >
                </div>
              </div>
            </div>
          </a>
        </div>
      </div>
    </SignedIn>

    <SignedOut client:load>
      <script is:inline>
        // Redirect to login if not authenticated
        window.location.href = "/login";
      </script>
    </SignedOut>
  </div>
</BaseLayout>
